@model IEnumerable<TennisFinalGrp339.Models.Schedule>

@{
    ViewData["Title"] = "Upcoming Schedules";
}

<h1>Upcoming Schedules</h1>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Location)</th>
            <th>@Html.DisplayNameFor(model => model.Description)</th>
            <th>Scheduled Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Location)</td>
                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                <td>@item.ScheduledDate.ToShortDateString()</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.ScheduleId">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
